<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activitys.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <ImageView
            android:layout_width="114dp"
            android:layout_height="117dp"
            android:layout_marginTop="69dp"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:background="@drawable/logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:fontFamily="@font/mmrtext"
            android:text="OTP Verification"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:maxLines="3"
            android:gravity="center"
            android:fontFamily="@font/mmrtext"
            android:text="Enter the OTP sent to"
            android:textColor="@color/black"
            android:textSize="12dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
                android:maxLines="3"
                android:id="@+id/mobile_verify"
                android:gravity="center"
                android:fontFamily="@font/mmrtext"
                android:text="+91 4738473433"
                android:textColor="@color/black"
                android:textSize="12dp" />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:visibility="gone"
            android:layout_gravity="center"
            android:gravity="end|center"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/mmrtext"
            android:text="OTP Expires in 4:53 Minutes"
            android:textColor="@color/red"
            android:textSize="14dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_margin="0dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="52dp"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:layout_height="match_parent">
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                app:boxStrokeColor="@color/login_btn_red"
                android:textColorHint="@color/hint_color"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:fontFamily="@font/mmrtext"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    style="@style/pin_edittext_style"
                    android:digits="0987654321"
                    android:maxLength="1"
                    android:inputType="phone"
                    android:id="@+id/otp_edit1"
                    android:layout_gravity="center"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/hint_color"
                    android:hint="" />
            </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="52dp"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:layout_height="match_parent">
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    app:boxStrokeColor="@color/login_btn_red"
                    android:textColorHint="@color/hint_color"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:fontFamily="@font/mmrtext"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        style="@style/pin_edittext_style"
                        android:digits="0987654321"
                        android:maxLength="1"
                        android:inputType="phone"
                        android:id="@+id/otp_edit2"
                        android:layout_gravity="center"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/hint_color"
                        android:hint="" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="52dp"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:layout_height="match_parent">
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    app:boxStrokeColor="@color/login_btn_red"
                    android:textColorHint="@color/hint_color"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:fontFamily="@font/mmrtext"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:digits="0987654321"
                        android:maxLength="1"
                        style="@style/pin_edittext_style"
                        android:inputType="phone"
                        android:id="@+id/otp_edit3"
                        android:layout_gravity="center"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/hint_color"
                        android:hint="" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="52dp"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:layout_height="match_parent">
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    app:boxStrokeColor="@color/login_btn_red"
                    android:textColorHint="@color/hint_color"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:fontFamily="@font/mmrtext"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:digits="0987654321"
                        android:maxLength="1"
                        style="@style/pin_edittext_style"
                        android:inputType="phone"
                        android:id="@+id/otp_edit4"
                        android:layout_gravity="center"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/hint_color"
                        android:hint="" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

        </LinearLayout>


        <Button
            android:id="@+id/verify"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_login_bg"
            android:text="Verify"
            android:fontFamily="@font/mmrtextb"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />

    </LinearLayout>

