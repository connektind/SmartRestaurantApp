<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activitys.ViewProfileActivity">
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:padding="15dp">

            <ImageButton
                android:id="@+id/back_btn_profile_show"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/back_icon"
                />

            <TextView
                android:id="@+id/edit_profile_red"
                android:layout_width="wrap_content"
                android:text="Profile"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/mmrtextb"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:textSize="24dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                 />

        </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/practice_bg"
            android:id="@+id/dashborad_nav_profile"
            android:gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_profile_1"
                android:layout_width="95dp"
                android:layout_height="95dp"
                app:srcCompat="@drawable/circle_back" />
        </LinearLayout>


        <TextView
            android:id="@+id/user_name_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center|end"
            android:text=""
            android:layout_toRightOf="@+id/dashborad_nav_profile"
            android:textColor="@color/red"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name_heading"
            android:layout_toRightOf="@+id/dashborad_nav_profile"
            android:gravity="center"
            android:text=""
            android:id="@+id/user_mobile_heading"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="normal" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:padding="5dp"
                android:paddingEnd="15dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:fontFamily="@font/mmrtext"
                            android:textColor="@color/text_color"
                            android:textSize="16dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:id="@+id/user_name"
                            android:textColor="@color/red"
                            android:textSize="16dp"
                            android:fontFamily="@font/mmrtextb" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mobile number"
                        android:fontFamily="@font/mmrtext"
                        android:textColor="@color/text_color"
                        android:textSize="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/red"
                        android:textSize="16dp"
                        android:id="@+id/user_mobile_no"
                        android:fontFamily="@font/mmrtextb"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email ID"
                        android:fontFamily="@font/mmrtext"
                        android:textColor="@color/text_color"
                        android:textSize="16dp"/>

                    <TextView
                        android:id="@+id/user_email_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/red"
                        android:textSize="16dp"

                        android:fontFamily="@font/mmrtextb" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:fontFamily="@font/mmrtext"
                        android:textColor="@color/text_color"
                        android:textSize="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/red"
                        android:textSize="16dp"
                        android:id="@+id/user_address"
                        android:fontFamily="@font/mmrtextb" />
                </LinearLayout>

            </LinearLayout>
    </LinearLayout>
    <ImageButton
            android:id="@+id/edit_profile"
            android:layout_width="65dp"
            android:layout_gravity="center"
            android:layout_height="65dp"
        android:layout_marginBottom="65dp"
            android:layout_marginTop="65dp"
            android:background="@drawable/edit_profile_pencil"
            />

    </LinearLayout>
   </ScrollView>
    </LinearLayout>
