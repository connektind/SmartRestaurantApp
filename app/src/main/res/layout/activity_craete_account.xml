<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    android:background="@color/white"
    tools:context=".activitys.LoginActivity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <ImageView
            android:layout_width="114dp"
            android:layout_height="117dp"
            android:layout_marginTop="69dp"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:background="@drawable/logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:fontFamily="@font/mmrtext"
            android:text="Create Account"
            android:textColor="@color/black"
            android:textSize="20dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    app:boxStrokeColor="@color/login_btn_red"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/mmrtext"
                    android:textColorHint="@color/hint_color"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mmrtext"
                        android:hint="First name"
                        android:id="@+id/first_name"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/hint_color" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    app:boxStrokeColor="@color/login_btn_red"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/mmrtext"
                    android:textColorHint="@color/hint_color"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mmrtext"
                        android:id="@+id/last_name"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/hint_color"
                        android:hint="Last name" />
                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                app:boxStrokeColor="@color/login_btn_red"
                android:layout_margin="10dp"
                android:fontFamily="@font/mmrtext"
                android:textColorHint="@color/hint_color"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/mmrtext"
                    android:id="@+id/username"
                    android:textColorHint="@color/hint_color"
                    android:hint="Username" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                app:boxStrokeColor="@color/login_btn_red"
                android:layout_margin="10dp"
                android:fontFamily="@font/mmrtext"
                android:textColorHint="@color/hint_color"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/mmrtext"
                    android:id="@+id/email_id"
                    android:textColorHint="@color/hint_color"
                    android:hint="E-mail address" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                app:boxStrokeColor="@color/login_btn_red"
                android:layout_margin="10dp"
                android:fontFamily="@font/mmrtext"
                android:textColorHint="@color/hint_color"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mmrtext"
                    android:id="@+id/mobile_no"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/hint_color"
                    android:hint="Mobile number" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordTextInputLayout"
                android:layout_margin="10dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                app:boxStrokeColor="@color/login_btn_red"
                android:fontFamily="@font/mmrtext"
                android:textColorHint="@color/hint_color"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userIDTextInputLayout"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/text_color"
                app:passwordToggleDrawable="@drawable/show_password_selector">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:fontFamily="@font/mmrtext"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/hint_color" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_margin="10dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                app:boxStrokeColor="@color/login_btn_red"
                android:fontFamily="@font/mmrtext"
                android:layout_below="@+id/userIDTextInputLayout"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/text_color"
                app:passwordToggleDrawable="@drawable/show_password_selector"
                android:textColorHint="@color/hint_color"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/confirm_password"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mmrtext"
                    android:textColorHint="@color/hint_color"
                    android:textColor="@color/text_color"
                    android:hint="Confirm password" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
        <Button
            android:id="@+id/btn_accountcrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_login_bg"
            android:text="Sign Up"
            android:fontFamily="@font/mmrtextb"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>
    </ScrollView>

