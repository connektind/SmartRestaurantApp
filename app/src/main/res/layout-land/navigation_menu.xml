<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_marginEnd="550dp"
    android:paddingBottom="-20dp"
    android:layout_marginBottom="-20dp"
    android:layout_width="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingBottom="100dp"
    android:background="@color/navi_menu_red"
    android:id="@+id/dashbord_nav_transrent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:gravity="center"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:background="@drawable/practice_bg"
                android:id="@+id/dashborad_nav_profile"
                android:gravity="center"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_profile_1"
                    android:layout_width="110dp"
                    android:layout_height="120dp"
                    app:srcCompat="@drawable/circle_back" />
            </LinearLayout>

            <ImageView
                android:layout_width="48dp"
                android:visibility="gone"
                android:layout_marginRight="-15dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_backarrow_icon"
                android:layout_height="48dp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:paddingBottom="15dp"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:background="@color/hint_color"
            android:layout_height="1dp"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/ic_dashboard_24px"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:fontFamily="@font/mmrtext"
            android:gravity="center"
            android:text="Dashboard"

            android:textColor="@color/red_buttn_border"
            android:textSize="16dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/available_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/ic_shopping_basket_24px"
            android:drawablePadding="10dp"
            android:text="Available Orders"
            android:fontFamily="@font/mmrtext"
            android:textColor="@color/red_buttn_border"
            android:textSize="16dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/order_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:drawablePadding="10dp"
            android:padding="5dp"

            android:text="Order History"
            android:fontFamily="@font/mmrtext"
            android:textColor="@color/red_buttn_border"
            android:textSize="16dp"
            android:textStyle="normal"
            app:drawableLeftCompat="@drawable/ic_restore_24px" />



        <TextView
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/ic_settings_24px"
            android:drawablePadding="10dp"                android:padding="5dp"
            android:text="Settings"
            android:fontFamily="@font/mmrtext"
            android:textColor="@color/red_buttn_border"
            android:textSize="16dp"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/order_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/ic_assignment_24px"
            android:drawablePadding="10dp"

            android:padding="5dp"
            android:fontFamily="@font/mmrtext"
            android:text="Order Reports"
            android:textColor="@color/red_buttn_border"
            android:textSize="16dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/ic_power_settings_new_24px"
            android:drawablePadding="10dp"                android:padding="5dp"
            android:text="Logout"
            android:fontFamily="@font/mmrtext"
            android:textColor="@color/red_buttn_border"
            android:textSize="16dp"
            android:textStyle="normal" />


    </LinearLayout>


</LinearLayout>
</ScrollView>