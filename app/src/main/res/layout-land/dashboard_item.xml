<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/hint_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <ImageView
                android:id="@+id/item_logo"
                android:layout_width="88dp"
                android:layout_height="79dp"
                android:layout_margin="30dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_shopping_beg"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp">


                <TextView
                    android:id="@+id/order_no"
                    android:layout_width="42dp"
                    android:layout_height="50dp"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:fontFamily="@font/mmrtextb"
                    android:gravity="start"
                    android:text="04"
                    android:textColor="@color/black"
                    android:textSize="35dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avaliable Order"
                    android:textSize="17dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/mmrtext"
                    android:textColor="@color/text_color"
                    android:id="@+id/availble_order_item"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/show_more_dash"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="Show more"
                    android:textSize="16dp"
                    android:id="@+id/show_more"
                    android:fontFamily="@font/mmrtext"
                    android:textColor="@color/red" />
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginRight="30dp"
                        android:layout_below="@id/show_more"
                        android:background="@color/login_btn_red" />

                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/hint_color" />
</LinearLayout>