<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    tools:context=".activitys.OrderDetailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tranparent_layer"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/realtive_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="15dp">
            <ImageView
                android:id="@+id/back_btn_orderdetail"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="fitXY"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/back_icon" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:layout_alignParentEnd="true">

                <TextView
                    android:id="@+id/bookmark_red_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Detail"
                    android:fontFamily="@font/mmrtextb"
                    android:textColor="@color/red"
                    android:textSize="24dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/bookmark_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:padding="5dp"
                android:gravity="center"
                android:text="Print"
                android:drawableRight="@drawable/printer"
                android:drawablePadding="15dp"

                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/red"
                android:textSize="14dp"
                android:textStyle="normal" />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/hint_color" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="15dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:fontFamily="@font/mmrtextb"
                        android:layout_weight="1.5"
                        android:textColor="@color/text_color"
                        android:textSize="16dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_weight="0.5"
                        android:id="@+id/order_date"
                        android:fontFamily="@font/mmrtext"
                        android:gravity="start"
                        android:layout_gravity="start"
                        android:textColor="@color/text_color"
                        android:textSize="16dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Order ID"
                        android:fontFamily="@font/mmrtextb"
                        android:layout_weight="1.5"
                        android:textColor="@color/text_color"
                        android:textSize="16dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/order_id"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/mmrtext"
                        android:gravity="start"
                        android:layout_gravity="start"
                        android:textColor="@color/text_color"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="Customer"
                        android:fontFamily="@font/mmrtextb"

                        android:textColor="@color/text_color"
                        android:textSize="16dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/customer_name"
                        android:layout_weight="0.5"
                        android:text=""
                        android:fontFamily="@font/mmrtext"
                        android:gravity="start"
                        android:layout_gravity="start"
                        android:textColor="@color/text_color"
                        android:textSize="16dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Items"
                        android:fontFamily="@font/mmrtextb"
                        android:layout_weight="1.5"
                        android:textColor="@color/text_color"
                        android:textSize="16dp" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_weight="0.5"
                        android:id="@+id/recycler_productname"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="Delivery Type"
                        android:fontFamily="@font/mmrtextb"
                        android:textColor="@color/text_color"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/delivery_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/mmrtext"
                        android:gravity="start"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="16dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Order Status"
                        android:fontFamily="@font/mmrtextb"
                        android:gravity="start|center"
                        android:layout_weight="1.5"
                        android:textColor="@color/text_color"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/login_bg"
                        android:orientation="horizontal"
                        android:layout_weight="1.2"
                        android:padding="5dp">

                        <EditText
                            android:id="@+id/order_select"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:drawableRight="@drawable/drop_down"
                            android:backgroundTint="@android:color/transparent"
                            android:editable="false"
                            android:focusableInTouchMode="false"
                            android:hint="--Status--"
                            android:inputType="none"
                            android:maxLength="12"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/hint_color"
                            android:textSize="15dp" />
                    </LinearLayout>


                    <Spinner
                        android:id="@+id/order_complete_select"
                        style="@style/Spinner"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        />
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/hint_color" />


            <Button
                android:id="@+id/chnge_order"
                android:layout_width="145dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_login_bg"
                android:fontFamily="@font/mmrtextb"
                android:gravity="center"
                android:textAllCaps="false"
                android:text="Change Status"
                android:textColor="@color/white"
                android:textStyle="bold" />
</LinearLayout>
</ScrollView>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>